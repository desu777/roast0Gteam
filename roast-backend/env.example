# ðŸŽ® ROAST 0G BACKEND CONFIGURATION

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_PATH=./data/roast.db
DATABASE_BACKUP_PATH=./data/backups/

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
TEST_ENV=false

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
SUBMISSION_RATE_LIMIT=1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# 0G Network Configuration
ZG_NETWORK_RPC=https://evmrpc-testnet.0g.ai
ZG_CHAIN_ID=16600
ZG_HOT_WALLET_PRIVATE_KEY=your-private-key-here
ZG_ENTRY_FEE=0.025
ZG_HOUSE_FEE_PERCENTAGE=5

# AI Service Configuration
AI_SERVICE_ENABLED=true
AI_EVALUATION_TIMEOUT=15000
AI_FALLBACK_ENABLED=true

# Game Configuration
ROUND_TIMER_DURATION=120
JUDGING_DURATION=15
NEXT_ROUND_DELAY=30
MAX_PLAYERS_PER_ROUND=20
MAX_ROAST_LENGTH=280

# WebSocket Configuration
WS_PING_TIMEOUT=30000
WS_PING_INTERVAL=25000
WS_UPGRADE_TIMEOUT=10000

# Security
WALLET_SIGNATURE_TIMEOUT=300000
TRANSACTION_TIMEOUT=300000
ENABLE_PROFANITY_FILTER=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Admin Configuration
ADMIN_ADDRESSES=0x1234567890123456789012345678901234567890 